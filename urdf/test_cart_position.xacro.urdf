<?xml version="1.0" ?>
<robot name="cart">
  <link name="world"/>
  
  <link name="slideBar">
    <visual>
      <geometry>
        <box size="5 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="green">
        <color rgba="0 0.8 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="100"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  
  <link name="cart">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.2"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  
  <link name="computer">
    <visual>
      <geometry>
        <box size="0.45 0.45 0.1"/>
      </geometry>
      <origin xyz="0 0 0.07"/>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>
  
  <link name="lidar">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.2"/>
      </geometry>
      <origin xyz="0 0 0.09"/>
      <material name="yellow">
        <color rgba="0.8 0.8 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
    </inertial>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="computer"/>
    <child link="laser_frame"/>
    <origin xyz="0.1 0 0.175" rpy="0 0 0"/>
  </joint>
  
  <link name="laser_frame">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.025" ixy="0.0" ixz="0.0" iyy="0.025" iyz="0.0" izz="0.025"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </inertial>
  </link>

  <gazebo reference="laser_frame">
    <material>Gazebo/Red</material>
    <sensor name="laser" type="ray">
      <pose> 0 0 0 0 0 0 </pose>
      <visualize>false</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.3</min>
          <max>12</max>
        </range>
      </ray>
      <plugin name="laser_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <argument>~/out:=scan</argument>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>laser_frame</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <link name="water_tank">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.3"/>
      </geometry>
      <origin xyz="0 0 0.18"/>
      <material name="cyan">
        <color rgba="0 0.8 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
    </inertial>
  </link>

  <link name="support1">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.25"/>
      </geometry>
      <origin xyz="0.1 0.1 0.06"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>
  
  <link name="support2">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.25"/>
      </geometry>
      <origin xyz="0.1 -0.1 0.06"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>
  
  <link name="support3">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.25"/>
      </geometry>
      <origin xyz="-0.1 0.1 0.06"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>
  
  <link name="support4">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.25"/>
      </geometry>
      <origin xyz="-0.1 -0.1 0.06"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="cart"/>
    <child link="camera_link"/>
    <origin xyz="0.305 0 0.08" rpy="0 0 0"/>
  </joint>
 
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.010 0.03 0.03"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
 
  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_link_optical"/>
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
  </joint>
 
  <link name="camera_link_optical"></link>

  <gazebo reference="camera_link">
    <material>Gazebo/Red</material>
    <sensor name="camera" type="camera">
      <pose> 0 0 0 0 0 0 </pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <camera>
        <horizontal_fov>1.089</horizontal_fov>
        <image>
          <format>R8G8B8</format>
          <width>640</width>
          <height>480</height>
        </image>
        <clip>
          <near>0.05</near>
          <far>8.0</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <cameraName>camera_link</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camera_info</cameraInfoTopicName>
        <frame_name>camera_link_optical</frame_name>
      </plugin>
    </sensor>
  </gazebo>


  <joint name="world_to_base" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 1.0"/>
    <parent link="world"/>
    <child link="slideBar"/>
  </joint>
  
  <joint name="slider_to_cart" type="prismatic">
    <axis xyz="1 0 0"/>
    <!-- X축을 기준으로 180도(π 라디안) 회전 적용 -->
    <origin xyz="0.0 0.0 0.0" rpy="3.14159 0.0 0.0"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <limit effort="1000.0" lower="-2.5" upper="2.5" velocity="30"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>
  
  <joint name="cart_to_computer" type="fixed">
    <origin xyz="0 0 0.07"/>
    <parent link="cart"/>
    <child link="computer"/>
  </joint>
  
  <joint name="computer_to_lidar" type="fixed">
    <origin xyz="0 0 0.09"/>
    <parent link="computer"/>
    <child link="lidar"/>
  </joint>
  
  <joint name="lidar_to_water_tank" type="fixed">
    <origin xyz="0 0 0.18"/>
    <parent link="lidar"/>
    <child link="water_tank"/>
  </joint>
  
  <joint name="lidar_to_support1" type="fixed">
    <origin xyz="0.1 0.1 0.06"/>
    <parent link="lidar"/>
    <child link="support1"/>
  </joint>
  
  <joint name="lidar_to_support2" type="fixed">
    <origin xyz="0.1 -0.1 0.06"/>
    <parent link="lidar"/>
    <child link="support2"/>
  </joint>
  
  <joint name="lidar_to_support3" type="fixed">
    <origin xyz="-0.1 0.1 0.06"/>
    <parent link="lidar"/>
    <child link="support3"/>
  </joint>
  
  <joint name="lidar_to_support4" type="fixed">
    <origin xyz="-0.1 -0.1 0.06"/>
    <parent link="lidar"/>
    <child link="support4"/>
  </joint>
  
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="slider_to_cart">
      <command_interface name="position">
        <param name="min">-2.5</param>
        <param name="max">2.5</param>
      </command_interface>
      <state_interface name="position">
        <param name="initial_value">2.0</param>
      </state_interface>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find gazebo_ros2_control_demos)/config/controllers.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
